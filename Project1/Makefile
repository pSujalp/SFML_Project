# Compiler
CXX = g++

# Compiler flags
CXXFLAGS = -c

# Linker flags
LDFLAGS = -lsfml-graphics -lsfml-window -lsfml-system

# Target executable
TARGET = sfml-app

# Source files
SOURCES = main.cpp

# Object files
OBJECTS = main.o
